<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".fragment.MoreFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="4dp"
        android:clickable="true"
        android:elevation="2dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/material_white"
        android:layout_marginStart="24dp"
        android:src="@drawable/group_297"
            app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/abhaya_libre_semibold"
        android:text="Hi Nayah Tantoh,"
        android:textSize="18sp"
android:textColor="@color/text"
        app:layout_constraintStart_toStartOf="@+id/image_view_profile"
        app:layout_constraintTop_toBottomOf="@+id/image_view_profile" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_25"

        android:layout_marginTop="24dp"
        android:src="@drawable/ic_ico___24___user___user_big_outlined"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:tint="@color/text" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Profile"
        android:textColor="@color/text"
        android:paddingEnd="@dimen/padding_100"
        android:paddingStart="16dp"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:background="?selectableItemBackground"
android:onClick="onClick"
        android:textSize="@dimen/txt_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/txt_sep1"
        style="@style/Separator_Horizontal_No_Margin"
        android:layout_marginRight="@dimen/margin_8"
        android:background="@color/material_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_weight="1"
        android:src="@drawable/ic_icon_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sep1"
        app:tint="@color/text" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingStart="16dp"
        android:paddingTop="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_100"
        android:paddingBottom="@dimen/padding_10"
        android:text="@string/settings"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:id="@+id/txt_sep2"
        style="@style/Separator_Horizontal_No_Margin"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_8"
        android:background="@color/material_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@drawable/ic_icon_color__co"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sep2"
        app:tint="@color/text" />

    <TextView
        android:id="@+id/my_coupons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingTop="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_100"
        android:paddingBottom="@dimen/padding_10"
        android:text="@string/my_coupons"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <TextView
        android:id="@+id/txt_sep3"
        style="@style/Separator_Horizontal_No_Margin"
        android:layout_marginRight="8dp"
        android:background="@color/material_white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_weight="1"
        android:src="@drawable/ic_ico___24___actions___help_outlined"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sep3"
        app:tint="@color/text" />

    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"

        android:paddingStart="16dp"
        android:paddingTop="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_100"
        android:paddingBottom="@dimen/padding_10"
        android:text="@string/help"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <TextView
        android:id="@+id/txt_sep4"
        style="@style/Separator_Horizontal_No_Margin"
        android:layout_marginRight="8dp"
        android:background="@color/material_white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_weight="1"
        android:src="@drawable/ic_live_chat"
        android:tint="@color/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sep4"
        app:tint="@color/text" />

    <TextView
        android:id="@+id/live_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:background="?selectableItemBackgroundBorderless"

        android:paddingTop="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_100"
        android:paddingBottom="@dimen/padding_10"
        android:text="@string/live_chat"
        android:textColor="@color/text"
        android:textSize="@dimen/txt_subheading"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <TextView
        android:id="@+id/txt_sep5"
        style="@style/Separator_Horizontal_No_Margin"
        android:layout_marginRight="8dp"
        android:background="@color/material_white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
